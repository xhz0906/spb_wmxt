<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="hi.wmxfd.mapper.ShopMapper">
    <resultMap id="shopResult" type="shopping">
        <id property="sId" column="sId"></id>
        <result property="sName" column="sName"></result>
        <result property="sphone" column="sphone"></result>
        <result property="sadress" column="sadress"></result>
    </resultMap>
    <select id="loadPage" resultMap="shopResult">
        select * from tb_shopping
    </select>
    <select id="ToTalCount" resultType="int">
        select count(sId) from tb_shopping
    </select>
</mapper>